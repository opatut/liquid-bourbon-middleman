# If you do not have OpenSSL installed, update
# the following line to use "http://" instead
source 'https://rubygems.org'

gem "middleman", "~>3.3.7"

# Live-reloading plugin
gem "middleman-livereload", "~> 3.1.0"

# For faster file watcher updates on Windows:
gem "wdm", "~> 0.1.0", :platforms => [:mswin, :mingw]

# Windows does not come with time zone data
gem "tzinfo-data", platforms: [:mswin, :mingw]

# Shopify Liquid template engine
gem 'liquid', '~> 3.0.0', :require => false

# JS Linter
gem 'jslint', '~> 1.2.0', :require => false

# Sass plugin
gem 'sass', '~> 3.4.9', :require => false

# Linter for the project scss
gem 'scss-lint', '~> 0.30.0' , :require => false

# Sass Mixin Library (Currently only for the app frame)
gem 'bourbon', '~> 4.0.2', :require => false

# Bourboun Grid Library (Currently only for the app frame)
gem 'neat', '~> 1.7.0', :require => false

# Scaffold styles, variables and structure with Bitters
# (Currently only for the app frame)
gem 'bitters', '~> 0.10.1', :require => false

# Refills are prepackaged patterns and components,
# built on top of Bourbon, Bitters, and Neat.
#(Currently only for the app frame)
gem 'refills', '~> 0.0.2', :require => false

